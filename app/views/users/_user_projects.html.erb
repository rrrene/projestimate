<table id="table_list_4" class="table tablesorterPager table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= I18n.t(:label_project_name) %></th>
      <th><%= I18n.t(:label_project_version) %></th>
      <th><%= I18n.t(:alias) %></th>
      <th class="filter-select"><%= I18n.t(:state) %></th>
      <th class="filter-select" data-value="false"><%= I18n.t(:label_project_is_model) %></th>
      <th class="filter-select"><%= I18n.t(:selected) %></th>
    </tr>
  </thead>
  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.version %></td>
        <td><%= project.alias %></td>
        <td><%= project.state %></td>
        <td><%= project.is_model %></td>
        <td>
          <span class="hidden">
                  <%= project_users.map(&:id).include?(project.id).to_s.humanize %>
          </span>
          <% if can? :manage, User %>
            <%= check_box_tag :project_ids, project.id, project_users.map(&:id).include?(project.id), :name => 'user[project_ids][]' %>
          <% else %>
            <%= check_box_tag :project_ids, project.id, project_users.map(&:id).include?(project.id), :name => 'user[project_ids][]', :disabled => true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <%= render :partial => 'layouts/footer_table' %>

</table>

<script>
    <%= render :partial => 'layouts/sort_date', :handlers => [:erb], :formats => [:js]%>
</script>