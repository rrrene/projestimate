<h4 class="ui-widget">&nbsp;<i class="icon-reorder icon-large"></i>&nbsp;<b><%= I18n.t(:project_global_setting) %> </b>
</h4>
<div class="tabs">
<ul>
  <li><a href="#tabs-1"><%= I18n.t(:project_areas) %></a></li>
  <li><a href="#tabs-2"><%= I18n.t(:project_categories) %></a></li>
  <li><a href="#tabs-3"><%= I18n.t(:platform_categories) %></a></li>
  <li><a href="#tabs-4"><%= I18n.t(:acquisition_categories) %></a></li>
</ul>

<div id="tabs-1">

  <% if can? :manage, ProjectArea %>
      <table border="0" width="100%">
        <tr>
          <td style="text-align:right;">
            <%= link_to I18n.t('new_project_area'), new_project_area_path, :class => 'btn' %>
          </td>
        </tr>
      </table>
  <% end %>

  <table id="table_list_1" class="table tablesorterPager table-striped table-bordered table-condensed">
    <thead>
    <tr>
      <th><%= I18n.t('name') %></th>
      <th><%= I18n.t('description') %></th>
      <th class="filter-select"><%= I18n.t('record_status') %></th>
      <th class="action"><%= I18n.t(:actions) %></th>
    </tr>
    </thead>

    <tbody>
    <% ProjectArea.all.each do |i| %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.description %></td>
          <td><%= i.record_status.name unless i.record_status.nil? %><%= i.show_custom_value %></td>
          <td>
            <%= link_to '', edit_project_area_path(i), :class => 'button_attribute_tooltip icon-pencil icon-large icon-border pull-left', :title => I18n.t('edit') %>
            <% if can? :manage, ProjectArea %>
                <%= link_to '', i, confirm: I18n.t('are_you_sur'), method: :delete, :class => 'button_attribute_tooltip icon-remove icon-large icon-border pull-left', :style => 'color:red', :title => I18n.t('delete') %>
                <% if is_master_instance? && !i.is_local_record? %>
                    <% if i.is_retired? and can? :restore, :all %>
                        <%= link_to('', "project_areas/#{i.id}/restore_change", confirm: I18n.t('restoring'), :class => 'button_attribute_tooltip icon-undo icon-large icon-border pull-left', :style => 'color:orange', :title => I18n.t('restore_title')) %>
                    <% else %>
                        <% if !i.is_defined? and !i.is_retired? and can? :validate, :all %>
                            <%= link_to('', "project_areas/#{i.id}/validate_change", confirm: I18n.t('validation'), :class => 'button_attribute_tooltip icon-ok icon-large icon-border pull-left', :style => 'color:green', :title => I18n.t('validate_title')) %>
                        <% end %>
                    <% end %>
                <% end %>
            <% end %>
          </td>
        </tr>
    <% end %>
    <%= render :partial => 'layouts/footer_table' %>
    </tbody>
  </table>
</div>

